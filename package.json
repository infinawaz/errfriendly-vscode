{
  "name": "errfriendly-vscode",
  "displayName": "ErrFriendly VS Code",
  "description": "Friendly Python error explanations directly in VS Code",
  "version": "0.0.1",
  "publisher": "infinawaz",
  "repository": {
    "type": "git",
    "url": "https://github.com/infinawaz/errfriendly-vscode.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "errfriendly.explainCurrent",
        "title": "ErrFriendly: Explain Current Error"
      },
      {
        "command": "errfriendly.explainLast",
        "title": "ErrFriendly: Explain Last Exception"
      },
      {
        "command": "errfriendly.toggleAutoExplain",
        "title": "ErrFriendly: Toggle Auto Explain"
      }
    ],
    "configuration": {
      "title": "ErrFriendly",
      "properties": {
        "errfriendly.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to the Python interpreter to use."
        },
        "errfriendly.autoExplain": {
          "type": "boolean",
          "default": true,
          "description": "Automatically explain errors when they occur."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}